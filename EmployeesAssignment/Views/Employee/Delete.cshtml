@model EmployeesAssignment.Models.DTO.DisplayEmployeeDto

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Delete Employee</h5>
    </div>
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete this employee?</h3>

        <div class="card-text">
            <dl class="row">
                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-3">Birth Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BirthDate)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Employment Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmploymentDate)</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">City:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3">State:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.State)</dd>

                <dt class="col-sm-3">Country:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
